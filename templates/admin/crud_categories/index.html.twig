{% extends 'admin/admin/admin.html.twig' %}

 {% block admin_section_main_2 %}
     <div class="crud_lien">
         <a href="{{ path('app_admin_crud_categories_ajouter_categories') }}">Ajouter une catégorie</a>
     </div>
     <div class="table-responsive w-75 mt-2">
         <table class="table">
             <caption>Catégories</caption>
             <thead>
             <tr>
                 <th scope="col">id</th>
                 <th scope="col">Nom</th>
                 <th scope="col">Créé le</th>
                 <th scope="col">Modifier le</th>
                 <th scope="col">Actions</th>
             </tr>
             </thead>
             <tbody>
             {% if liste_categories == [] %}
                 <tr>
                     <td colspan="9" class="fw-bold text-danger">AUCUNE CATEGORIES</td>
                 </tr>
             {% endif %}
             {% for categorie in liste_categories %}
                 <tr>
                     <th scope="row">{{ categorie.id }}</th>
                     <td>{{ categorie.categorieNom }}</td>
                     <td>{{ categorie.dateCreation | date("d/m/Y") }}</td>
                     <td>{{ categorie.dateModification | date("d/m/Y")  }}</td>
                     <td>
                         <a href="{{ path('app_admin_crud_categories_details', {'id': categorie.id}) }}">voir</a>
                         <a href="{{ path('app_admin_crud_categories_modifier_categorie', {'id': categorie.id}) }}">modifier</a>
                         <a href="#">supprimer</a>
                     </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
     </div>

 {% endblock %}

