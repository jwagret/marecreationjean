{% extends 'admin/admin/admin.html.twig' %}

{% block messageLien %}
	<a href="{{ path('app_admin_crud_categories_liste') }}">
		Raffraichir la page</a>
{% endblock %}

{% block admin_section_main_2 %}
	<div class="crud_lien">
		<a href="{{ path('app_admin_crud_categories_ajouter_categories') }}">
			<i class="fa-solid fa-plus-square fa-3x"></i>
		</a>
	</div>
	<div class="table-responsive w-75 mt-2">
		<table class="table">
			<caption>Catégories</caption>
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Nom</th>
					<th scope="col">Créé le</th>
					<th scope="col">Modifier le</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% if liste_categories == [] %}
					<tr>
						<td colspan="9" class="fw-bold text-danger">AUCUNE CATEGORIES</td>
					</tr>
				{% endif %}
				{% for categorie in liste_categories %}
					<tr>
						<th scope="row">{{ categorie.id }}</th>
						<td>{{ categorie.categorieNom }}</td>
						<td>{{ categorie.dateCreation | date("d/m/Y") }}</td>
						{% if categorie.dateModification != null %}
							<td>{{ categorie.dateModification | date("d/m/Y")  }}</td>
						{% else %}
							<td></td>
						{% endif %}
						<td>
							<a href="{{ path('app_admin_crud_categories_details', {'id': categorie.id}) }}">
								<i class="fa-solid fa-eye"></i>
							</a>
							<a href="{{ path('app_admin_crud_categories_modifier_categorie', {'id': categorie.id}) }}">
								<i class="fa-solid fa-arrow-rotate-back"></i>
							</a>
							<a href="{{ path('app_admin_crud_categories_supprimer', {'id': categorie.id}) }}">
								<i class="fa-solid fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}

{% block admin_section_main_2_2 %}{% endblock %}
