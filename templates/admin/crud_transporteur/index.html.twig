{% extends 'admin/admin/admin.html.twig' %}

 {% block messageLien %}
     <a href="{{ path('app_admin_crud_transporteur_liste') }}"> Rafraichir la page</a>
 {% endblock %}

 {% block admin_section_main_2 %}
     <div class="crud_lien">
         <a href="{{ path('app_admin_crud_transporteur_ajouter') }}">
             <i class="fa-solid fa-plus-square fa-3x"></i>
         </a>
     </div>
     <div class="table-responsive w-75 mt-2">
         <table class="table">
             <caption>Nombre de Transporteurs : {{ total_transporteurs }}</caption>
             <thead>
             <tr>
                 <th scope="col">Nom</th>
                 <th scope="col">Prix</th>
                 <th scope="col">Créé le</th>
                 <th scope="col">Modifier le</th>
                 <th scope="col">Actions</th>
             </tr>
             </thead>
             <tbody>
             {% if liste_transporteurs == [] %}
                 <tr>
                     <td colspan="9" class="fw-bold text-danger">AUCUN TRANSPORTEURS</td>
                 </tr>
             {% endif %}
             {% for transporteur in liste_transporteurs %}
                 <tr>
                         <td>{{ transporteur.transporteurNom }}</td>
                         <td>{{ transporteur.transporteurPrix | number_format(2, ',', '.')}}€</td>
                         <td>{{ transporteur.dateCreation | date("d/m/Y")  }}</td>
                     {% if transporteur.dateModification != null %}
                         <td>{{ transporteur.dateModification | date("d/m/Y")  }}</td>
                     {% else %}
                         <td></td>
                     {% endif%}
                         <td>
                             <a href="{{ path('app_admin_crud_transporteur_details', {'id': transporteur.id}) }}"><i class="fa-solid fa-eye"></i></a>
                             <a href="{{ path('app_admin_crud_transporteur_modifier', {'id': transporteur.id}) }}"><i class="fa-solid fa-arrow-rotate-back"></i></a>
                             <a href="#"><i class="fa-solid fa-trash"></i></a>
                         </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
     </div>

 {% endblock %}

