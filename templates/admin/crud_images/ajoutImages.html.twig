{% extends 'admin/admin/admin.html.twig' %}

{% block admin_section_main_2 %}
	{{ include('includes/retourDashboard.html.twig') }}
	<div class="cadreForm mt-5">
		<p>
			<span>*</span>
			champs obligatoire</p>
		<h1 class="h3 mb-3 font-weight-normal">
			{% if nomFormulaire == 'ajouter' %}
				ajouter une image
			{% else %}
				modifier une image
			{% endif %}
		</h1>

		{{ form_start(formImage, {'attr': {'class': 'containerForm'}}) }}
		<div class="form">
			<div class="row">
				<div class="col">
						{{ form_row(formImage.image_nom) }}
					{% if nomFormulaire == 'modifier' %}
						<div class="form-control mb-3 admin_photo">
							<img class="afficherImage" src="{{ asset('/images/produits/'~image) }}" alt="">
						</div>
					{% endif %}
						{{ form_row(formImage.image_chemin) }}
						{{ form_row(formImage.produit) }}
				</div>
			</div>
			<div
				class="form_btn_align">
				{#                 {% if desactiver == false %}#}
				<button class="btn btn-lg btn-primary mt-3 btn_Form w-100 ms-3" type="submit" value="Valider" name="btn_valider">Valider</button>
				<button class="btn btn-lg btn-primary mt-3 btn_Form w-100 ms-3" type="submit" value="Annuler" name="btn_annuler">Annuler</button>
				{#                 {% endif %}#}
			</div>
		</div>
		{{ form_end(formImage) }}

	</div>

{% endblock %}

