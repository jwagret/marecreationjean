{% extends 'admin/admin/admin.html.twig' %}

{% block admin_section_main_2_2 %}
    <div class="table-responsive w-75 mt-5">
        <table class="table">
            <caption>Réduction : {{ reduction.reductionDesignation }} </caption>
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Référence</th>
                <th scope="col">Désignation</th>
                <th scope="col">Pourcentage</th>
                <th scope="col">Montant</th>
                <th scope="col">Créé le</th>
                <th scope="col">Modifier le</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">{{ reduction.id}}</th>
                <td>{{ reduction.reductionReference }}</td>
                <td>{{ reduction.reductionDesignation }}</td>
                <td>{{ reduction.reductionPourcentage }}</td>
                <td>{{  reduction.reductionMontant }}</td>
                <td> {{ reduction.dateCreation | date("d/m/Y") }}</td>
                {% if reduction.dateModification != null %}
                    <td> {{ reduction.dateModification | date("d/m/Y") }}</td>
                {% else%}
                    <td></td>
                {% endif %}
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}

