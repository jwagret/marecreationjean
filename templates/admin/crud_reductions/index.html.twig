{% extends 'admin/admin/admin.html.twig' %}

 {% block messageLien %}<a href="{{ path('app_admin_crud_reductions_liste') }}"> Raffraichir la page</a> {% endblock %}

 {% block admin_section_main_2 %}
     <div class="crud_lien"><a href="{{ path('app_admin_crud_reductions_ajouter') }}"><i class="fa-solid fa-plus-square fa-3x"></i></a></div>
     <div class="table-responsive w-75 mt-2">
         <table class="table">
             <caption>Les réductions</caption>
             <thead>
             <tr>
                 <th scope="col">id</th>
                 <th scope="col">Référence</th>
                 <th scope="col">Désignation</th>
                 <th scope="col">Pourcentage</th>
                 <th scope="col">Montant</th>
                 <th scope="col">Année</th>
                 <th scope="col">Créé le</th>
                 <th scope="col">Modifiée le</th>
                 <th scope="col">Actions</th>
             </tr>
             </thead>
             <tbody>
             {% if liste_reductions == [] %}
                 <tr>
                     <td colspan="9" class="fw-bold text-danger">AUCUNE REDUCTIONS</td>
                 </tr>
             {% endif %}
             {% for reduction in liste_reductions %}
                 <tr>
                     <th scope="row">{{ reduction.id }}</th>
                     <td>{{ reduction.reductionReference }}</td>
                     <td>{{ reduction.reductionDesignation }}</td>
                     <td>{{ reduction.reductionPourcentage }}</td>
                     <td>{{ reduction.reductionMontant }}</td>
                     <td>{{ reduction.anneeReductions }}</td>
                     <td>{{ reduction.dateCreation | date("d/m/Y") }}</td>
                     {% if reduction.dateModification != null %}
                        <td>{{ reduction.dateModification | date("d/m/Y") }}</td>
                     {% else %}
                         <td></td>
                     {% endif %}
                     <td>
                         <a href="{{ path('app_admin_crud_reductions_details', {'id': reduction.id}) }}"><i class="fa-solid fa-eye"></i></a>
                         <a href="{{ path('app_admin_crud_reductions_modifier', {'id': reduction.id}) }}"><i class="fa-solid fa-arrow-rotate-back"></i></a>
                         <a href="{{ path('app_admin_crud_reductions_supprimer', {'id': reduction.id}) }}"><i class="fa-solid fa-trash"></i></a>
                     </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
     </div>

 {% endblock %}

